{
  "name": "crunch-core",
  "version": "0.0.1",
  "description": "Crunch core development",
  "main": "index.js",
  "author": "Acclaim",
  "license": "MIT",
  "scripts": {
    "clean:dist": "rm -rf dist && mkdir dist ",
    "build": "webpack --progress --hide-modules",
    "build:webpack": "webpack",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "start": "npm run build -- --watch",
    "watch:webpack": "webpack --watch --progress",
    "release": "standard-version && git push --follow-tags && git push && git push --tags",
    "gen:module": "yarn plop; yarn gen:fields",
    "hs:auth": "hscms auth oauth2",
    "hs:sync-staging": "yarn gen:fields; yarn build:icons; hscms upload --portal=staging dist public",
    "hs:sync-prod": "yarn gen:fields; yarn build:icons; hscms upload --portal=prod dist public",
    "hs:sync-dev": "yarn gen:fields; yarn build:icons; hscms upload --portal=dev dist public",
    "hs:module": "hscms create module",
    "hs:watch": "hscms watch --portal=dev dist public",
    "deploy:staging": "yarn build && yarn hs:sync-staging",
    "deploy:prod": "yarn build && yarn hs:sync-prod",
    "deploy:dev": "yarn build && yarn hs:sync-dev",
    "prod": "npm run build --production"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "aos": "^3.0.0-beta.6",
    "autoprefixer": "9.7.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "bootstrap": "4.4.1",
    "bootstrap.native": "^2.0.27",
    "bootstrap.native-loader": "^2.0.0",
    "css-loader": "^4.2.1",
    "css-vars-ponyfill": "^2.3.2",
    "cssnano": "^4.1.10",
    "del": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "file-loader": "3.0.1",
    "json-merger": "^1.1.1",
    "lazysizes": "^5.1.0",
    "mburger-css": "^1.3.3",
    "node-sass": "^4.14.1",
    "plop": "^2.7.4",
    "postcss": "^7.0.32",
    "postcss-loader": "^3.0.0",
    "postcss-object-fit-images": "^1.1.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.0",
    "require-dir": "^1.2.0",
    "sass-loader": "^9.0.3",
    "sass-resources-loader": "^2.0.3",
    "standard-version": "^7.1.0",
    "terser-webpack-plugin": "^4.1.0",
    "through2": "^3.0.1",
    "tiny-slider": "^2.9.2",
    "url-loader": "1.1.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-notifier": "^1.7.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "browserslist": "^4.11.1",
    "body-scroll-lock": "^3.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "object-fit-images": "^3.2.4",
    "objectFitPolyfill": "^2.3.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "preact": "^10.4.7",
    "postcss-reporter": "^6.0.1",
    "raven-js": "^3.27.2",
    "scroll-behavior-polyfill": "^2.0.13",
    "smoothscroll": "^0.4.0",
    "stylelint": "^13.6.1",
    "stylelint-webpack-plugin": "^2.1.0"
  }
}
